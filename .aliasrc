# contains all aliases, to be loaded by bash/zsh Matthias
# 
# F端r ssh/gpg
export SSH_AUTH_SOCK=$(gpgconf --list-dirs agent-ssh-socket)
gpgconf --launch gpg-agent

# vim default editor
export VISUAL='vim'
# F端r prism_es2 f端r den CrapChat:
export LD_LIBRARY_PATH="/usr/lib/jvm/java-11-openjfx/lib/"

# ls-aliase
alias ls='ls --color=auto'
alias l='ls -lAh --color=auto'
alias lscripts='ls ~/.scripts'

# cd aliase
alias cdd='cd ~/Downloads'
alias cdp='cd ~/Python_Projekte'
alias cdgzpe='cd ~/Python_Projekte/Glowzwiebel_Physics_Engine'
alias cdgz='cd ~/c++/gze/src'

# start ranger
alias ra='ranger .'

# skript men端
alias s='sh ~/.scripts/script-menu.sh'      # run shell-script menu

# ffmpeg converters (dahinter Dateiendung der ursprungsdatei angeben!)
alias gzflac='sh ~/.scripts/flac_convert.sh'
alias gzmp3='sh ~/.scripts/mp3_convert.sh'

# Start-aliase
alias nv='nvidia-settings --load-config-only'
alias vcam='sudo modprobe v4l2loopback && ls /dev |grep video'
alias vshare='ffplay -video_size 1920x1080 -window_title "OBS-VCAM-SHARE" -left 1921 -top 0 -i /dev/video2' 

# history aliase
alias h='history'
alias hgrep='fc -El 0 | grep'

# edit aliase
alias brc='nano ~/.bashrc && source ~/.bashrc'
alias zrc='vim ~/.zshrc && source ~/.zshrc'
alias alrc='vim ~/.aliasrc'
alias sxhrc='vim ~/.config/sxhkd/sxhkdrc'
alias bsprc='vim ~/.config/bspwm/bspwmrc'
alias polyrc='vim ~/.config/polybar/config'
alias vrc='vim ~/.vimrc'

# surfac aliase
alias ri='sudo systemctl restart iwd'
alias st='sudo systemctl start iptsd'
alias sc='sudo systemctl'

# Sonstige aliase
alias please='sudo'
alias hack='python3 ~/Python_Projekte/starthack.py'
alias p='python3'
alias supac='sudo pacman -S'
alias no='sudo pacman -Rns'
alias pactex='tllocalmgr' # latex
alias qrcode='qrencode -o ~/Bilder/QR_Codes/bash_qr_code.png --foreground=68228b --background=ffffff'
alias unisync='rsync -a matthias@quintern.xyz:/home/matthias/Uni/Phy_Sem_3/ ~/Dokumente/Uni/Phy_Sem_3'
alias websync='rsync -a ~/Dokumente/Website/ matthias@quintern.xyz:/www'
alias moni='sh ~/.scripts/monitor.sh'
# Dummes Zeug
alias redyt='sh ~/.scripts/redyt.sh'            # browse reddit
alias starwars='telnet towel.blinkenlights.nl'  # watch star wars
alias lightshow='java -jar ~/Python_Projekte/java/LightShow.jar'
alias crapchat='sh ~/Python_Projekte/java/crapchat.sh'
alias gay='toilet -f mono9 -F border -w 132 --gay'
alias biggay='toilet -f bigmono9 -F border -w 132 --gay'
